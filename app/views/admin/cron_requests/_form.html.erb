

<%= form_with(model: admin_cron_request, local: true, class: "form-horizontal form-label-left") do |form| %>
  <% if admin_cron_request.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissible fade in">
      <h2><%= pluralize(admin_cron_request.errors.count, "error") %> <%=t("message.prohibited_saved")%></h2>

      <ul>
      <% admin_cron_request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title,t(".label_title"), :class=>"control-label col-md-3 col-sm-3 col-xs-12" %>
    <div class="col-md-6 col-sm-6 col-xs-12"><%= form.text_field :title, :class=>"form-control col-md-7 col-xs-12" %></div>
  </div>

  <div class="form-group">
    <%= form.label :description, t(".label_description"), :class=>"control-label col-md-3 col-sm-3 col-xs-12" %>
    <div class="col-md-6 col-sm-6 col-xs-12"><%= form.text_area :description, :class=>"form-control col-md-7 col-xs-12" %></div>
  </div>

  <div class="form-group">
    <%= form.label :url, t(".label_url"), :class=>"control-label col-md-3 col-sm-3 col-xs-12" %>
    <div class="col-md-6 col-sm-6 col-xs-12"><%= form.text_field :url, :class=>"form-control col-md-7 col-xs-12" %></div>
  </div>

  <div class="form-group">
    <%= form.label :http_method, t(".label_http_method"), :class=>"control-label col-md-3 col-sm-3 col-xs-12" %>
    <div class="col-md-6 col-sm-6 col-xs-12"><%= form.text_field :http_method, :class=>"form-control col-md-7 col-xs-12" %></div>
  </div>

  <div class="form-group">
    <%= form.label :periodicity, t(".label_periodicity"), :class=>"control-label col-md-3 col-sm-3 col-xs-12" %>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <%= form.select(:periodicity, options_for_select([['1', '1'], ['5', '5'], ['10', '10'], ['15', '15'], ['20', '20']], @admin_cron_request.periodicity), {},{:class=>"form-control col-md-7 col-xs-12"}) %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :periodicity_type, t(".label_periodicity_type"), :class=>"control-label col-md-3 col-sm-3 col-xs-12" %>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <%= form.select(:periodicity_type, options_for_select([['Minuto(s)', 'minutes'], ['Hora(s)', 'hours'], ['Dia(s)', 'days'], ['Mes(es)', 'months']], @admin_cron_request.periodicity_type), {},{:class=>"form-control col-md-7 col-xs-12"}) %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :at, t(".label_at"),:class=>"control-label col-md-3 col-sm-3 col-xs-12" %>
    <div class="col-md-6 col-sm-6 col-xs-12">
         <%options = Array.new %>
    <% options << ['', ''] %>
    <% 12.times{|t| options << ["#{t + 1}:00 am", "#{t + 1}:00 am"]; options << ["#{t + 1}:30 am", "#{t + 1}:30 am"]} %>
    <% 12.times{|t| options << ["#{t + 1}:00 pm", "#{t + 1}:00 pm"]; options << ["#{t + 1}:30 pm", "#{t + 1}:30 pm"]} %>
    <%= form.select(:at, options_for_select(options, @admin_cron_request.at), {},{:class=>"form-control col-md-7 col-xs-12"}) %>

    </div>
  </div>

  <div class="form-group">
    <%= form.label :status,t(".label_status"), :class=>"control-label col-md-3 col-sm-3 col-xs-12" %>
    <div class="col-md-6 col-sm-6 col-xs-12"><%= form.check_box :status, :class=>"form-control col-md-7 col-xs-12" %></div>
  </div>

  <div class="form-group">
    <%= form.label :user_id, :class=>"control-label col-md-3 col-sm-3 col-xs-12" %>
   <div class="col-md-6 col-sm-6 col-xs-12"> <%= form.number_field :user_id, :class=>"form-control col-md-7 col-xs-12" %></div>
  </div>

  <div class="form-group">
    <%= form.label :params, t(".label_params"), :class=>"control-label col-md-3 col-sm-3 col-xs-12" %>
    <div class="col-md-6 col-sm-6 col-xs-12"><%= form.text_field :params, :class=>"form-control col-md-7 col-xs-12" %></div>
  </div>
  <div class="ln_solid"></div>
  <div class="form-group">
    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
      <%= form.submit t("button.send"), :class=>"btn btn-success" %>
    </div>
  </div>
<% end %>
